								</tr>
								@foreach (var quoteItem in Model.InvestingComQuotes)
								{
									<tr>
										@*<td class="@quoteItem.CssClass cots__table-item"><a href="@quoteItem.ChartUrl" class="@quoteItem.CssClass" title="@quoteItem.ATitle">@quoteItem.TickerName</a></td>
											<td class="@quoteItem.CssClass cots__table-item"><a class="@quoteItem.CssClass lastQuote-@quoteItem.TickerId" href="@quoteItem.ChartUrl" title="@quoteItem.ATitle">@quoteItem.Quote</a></td>
											<td class="@quoteItem.CssClass cots__table-item"><a class="@quoteItem.CssClass changePercent-@quoteItem.TickerId" href="@quoteItem.ChartUrl" title="@quoteItem.ATitle">@quoteItem.ChangeStr</a></td>
											<td class="@quoteItem.CssClass cots__table-item"><a class="@quoteItem.CssClass changePercent-@quoteItem.TickerId" href="@quoteItem.ChartUrl" title="@quoteItem.ATitle">@quoteItem.ChangePercentStr%</a></td>
											<td class="@quoteItem.CssClass cots__table-item"><a class="@quoteItem.CssClass lastQuote-@quoteItem.TickerId" href="@quoteItem.ChartUrl" title="@quoteItem.ATitle">@quoteItem.TimeStr</a></td>*@
										<td class="cots__table-item">@quoteItem.TickerName</td>
										<td class="cots__table-item">@quoteItem.Quote</td>
										<td class="cots__table-item @quoteItem.CssClass">@quoteItem.ChangeStr</td>
										<td class="cots__table-item @quoteItem.CssClass">@quoteItem.ChangePercentStr%</td>
										<td class="cots__table-item">@quoteItem.TimeStr</td>
									</tr>
								}
							</table>
						</div>
					</div>
				</div>
				<div class="col-sm-12 col-md-3">
					<div class="row lme__block p-0">
						<div class="col-sm-12">
							<div class="lme__block-text">
								Рекомендуемые LME цены
							</div>
						</div>
						<div class="col-sm-12 p-0 m-0">
							<table class="lme__table">
								<tr>
									<th class="lme__table-h">LME</th>
									<th class="lme__table-h">US$ @DateTime.Now.ToShortTimeString()</th>
								</tr>
								@foreach (var quoteItem in Model.LmeQuotes)
								{
									<tr>
										<td class="lme__table-text">@quoteItem.TickerName</td>
										<td class="lme__table-text">@quoteItem.Quote</td>
									</tr>
								}
							</table>
						</div>
					</div>
				</div>
