						</div>
						<div class="col col-md-6 col-lg-4">
							<a href="@(ViewBag.L.SiteUrlClear + (ViewBag.L.PersonalAreaUser?.Id > 0 ? "/Ads/NewAdStep0" : "/Registration"))" class="info__block-btn info__block-btn-buy">Купить</a>
						</div>
					</div>
				</div>
