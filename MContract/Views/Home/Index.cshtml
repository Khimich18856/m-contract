	<!-- //Первый экран -->
	<!-- Второй экран -->
	<section class="second__screen">
		<div class="container">
			<div class="row m-0">
				<div class="col-sm-12 col-md-2">
					<div class="row info__title-block">
						<div class="col">
							<div class="info__title">Курсы валют</div>
						</div>
					</div>
					<div class="row info__course">
						<div class="col-12">
							<div class="info__course-text">
								на @(DateTime.Now.ToShortDateString())
							</div>
						</div>
						<div class="col col-md-12">
							<div class="info__course-info dl">
								<div class="ico">
									<img src="/ico/dollar.png" alt="">
								</div>
								<span class="text">@(Model.TodayUsdQuote?.Value)</span> <span class="text-rub">&#8381;</span>
							</div>
						</div>
						<div class="col col-md-12">
							<div class="info__course-info eu">
								<div class="ico">
									<img src="/ico/evro.png" alt="">
								</div>
								<span class="text">@(Model.TodayEuroQuote?.Value)</span> <span class="text-rub">&#8381;</span>
							</div>
						</div>
					</div>
				</div>
				<div class="col-sm-12 col-md-7">
					<div class="row cots__block p-0">
						<div class="col-sm-12">
							<span class="cots__block-text">
								Котировки фьючерсов (CFD) в режиме реального времени
							</span>
						</div>
						<div class="col-sm-12 p-0 m-0">
							<table class="cots__table">
								<tr>
									<th class="cots__table-head">Товар</th>
									<th class="cots__table-head">Цена</th>
									<th class="cots__table-head">Изм.</th>
									<th class="cots__table-head">% изм.</th>
