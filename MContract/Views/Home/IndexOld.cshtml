@model MContract.Models.HomeIndexViewModel

@{
    ViewBag.Title = ViewBag.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="@Url.Content("~/css/Home/Index.css")?p=202006112" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/User/slick.css")?p=202006112" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/Home/tablesort.css")?p=202006112" rel="stylesheet" type="text/css" />

