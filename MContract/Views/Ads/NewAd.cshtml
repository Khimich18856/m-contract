@model MContract.Models.AdsNewAdViewModel

@{
	ViewBag.Title = ViewBag.Heading;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
	<link href="@Url.Content("~/css/lk-layout.css")?p=2020-10-10-a" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/css/NewAd.css")?p=2020-10-10-a" rel="stylesheet" type="text/css" />
}

<section class="header-pc">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-5 col-lg-4">
				<div class="offer__title">
